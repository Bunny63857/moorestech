<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net6.0</TargetFramework>
        <RootNamespace>Server</RootNamespace>
        <AssemblyName>moorestech_server</AssemblyName>
        
        <PackageReadmeFile>../Nuget/PackageReadme.md</PackageReadmeFile>
        
        <PackageId>moorestech.Server</PackageId>
        <Version>0.0.1</Version>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\Game.Crafting\Game.Crafting.csproj" />
        <ProjectReference Include="..\Game.PlayerInventory\Game.PlayerInventory.csproj" />
        <ProjectReference Include="..\Game.SaveLoad.Interface\Game.SaveLoad.Interface.csproj" />
        <ProjectReference Include="..\Game.SaveLoad\Game.SaveLoad.csproj" />
        <ProjectReference Include="..\Game.World.EventHandler\Game.World.EventHandler.csproj" />
        <ProjectReference Include="..\Game.WorldMap\Game.WorldMap.csproj" />
        <ProjectReference Include="..\Server.Event\Server.Event.csproj" />
        <ProjectReference Include="..\Server.Protocol\Server.Protocol.csproj" />
        <ProjectReference Include="..\Server.Boot\Server.Boot.csproj" />
        <ProjectReference Include="..\Server.Util\Server.Util.csproj" />
        <ProjectReference Include="..\Game.World\Game.World.csproj" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="6.0.0" />
    </ItemGroup>

    <ItemGroup>
        <None Include="..\Nuget\PackageReadme.md" Pack="true" PackagePath="\\" />
        
      <None Remove="mods\moorestechBaseMod.zip" />
      <Content Include="mods\moorestechBaseMod.zip">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </Content>
    </ItemGroup>

</Project>
